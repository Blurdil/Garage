<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Garage 2.5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["MemberId"] == null)
                {
                @Html.ActionLink("Bulldozer Garage", "Search", "Welcome", null, new { @class = "navbar-brand" })
                }
                else
                {
                 @Html.ActionLink("Bulldozer Garage", "Index", "Member", new { id = Session["MemberId"] }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Medlemar", "ShowMembers", "Member")</li>
                    <li>@Html.ActionLink("Parkerade bilar", "ParkedVehicles", "Parking")</li>                 
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if(ViewBag.Message != null)
        {
            @ViewBag.Message
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Garage 2.5</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
